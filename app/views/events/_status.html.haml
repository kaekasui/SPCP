%tt
  - case event.status.to_sym
    - when :started
      - if event.starts_on
        = t(:started_ago, time_ago_in_words(event.starts_on))
        - if event.ends_on
          - if event.ends_on > Date.today
            %span>= ", " + t(:finishes_in, distance_of_time_in_words(Date.today, event.ends_on))
          - else
            %span.warn= "(" + t(:was_supposed_to_finish, event.starts_on.strftime('%b %e, %Y')) + ")"
      - else
        %span.warn> #{t :no_start_date}
    - when :planned
      - if event.starts_on
        - if event.starts_on > Date.today
          = t(:starts_in, distance_of_time_in_words(Date.today, event.starts_on))
        - elsif event.starts_on < Date.today
          %span.warn= t(:was_supposed_to_start, :time_ago => distance_of_time_in_words(event.starts_on, Date.today), :start_date => event.starts_on.strftime('%b %e, %Y'))
        - else
          %span.cool #{t :starts_today}
      - else
        %span.warn> #{t :no_start_date}
    - when :completed
      = t(:finished_on, event.ends_on.strftime('%b %e, %Y')) if event.ends_on
