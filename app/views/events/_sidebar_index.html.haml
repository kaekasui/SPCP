.filters#filters
  = render "shared/search"
  - Setting.event_status.each do |key|
    .check_box{:style => "border-bottom: 1px silver dotted;"}
      %div{:style => "float:right;"}
        = @event_status_total[key]
      = event_status_checbox(key, @event_status_total[key])
      = label_tag(key, t(key))

  .check_box{:style => "border-bottom: 1px silver dotted;"}
    %div{:style => "float:right;"}
      = @event_status_total[:other]
    = event_status_checbox("other", @event_status_total[:other])
    = label_tag(:other, t(:other))

  .check_box
    %div{:style => "float:right;"}
      %b= @event_status_total[:all]
    %b #{t :total_events}
  = hook(:index_event_sidebar_bottom, self)
