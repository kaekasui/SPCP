= simple_form_for(@repository, :html => one_submit_only(:repositories), :remote => true) do |f|
  = link_to_close new_repository_path
  / = f.hidden_field :user_id
  = hidden_field_tag "opportunity", "#{@opportunity.id if @opportunity}"

  = f.error_messages :object_name => t('repositories')

  = render "repositories/top_section", :f => f
  / = render "shared/add_comment",   :f => f
  / = render "contacts/extra",       :f => f
  / = render "contacts/web",         :f => f
  / = render "fields/groups",        :f => f
  / = render "contacts/permissions", :f => f
  / 
  .buttonbar
    = f.submit t(:create_repository)
    #{t :or}
    = link_to_cancel new_repository_path
